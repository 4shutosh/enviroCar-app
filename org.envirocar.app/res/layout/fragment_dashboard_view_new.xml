<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_cario"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_dashboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cario_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fragment_dashboard_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_envirocar_logo_white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_toolbar"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_dashboard_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_cario"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fragment_dashboard_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/cario_color_primary"
                app:layout_constraintHeight_percent=".25"
                app:layout_constraintHeight_min="180dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="0dp"
                android:layout_height="76dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_dashboard_banner"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/fragment_dashboard_banner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fragment_dashboard_user_tracks_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_user_tracks_textview"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|center_horizontal"
                            android:text="3200"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                        <org.envirocar.app.views.utils.SizeSyncTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="8dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/dashboard_total_tracks"
                            app:autoSizeMaxTextSize="11sp"
                            app:autoSizeMinTextSize="2sp"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_dashboard_user_distance_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_user_distance_textview"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|center_horizontal"
                            android:text="3200"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                        <org.envirocar.app.views.utils.SizeSyncTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="@string/dashboard_total_distance"
                            app:autoSizeMaxTextSize="11sp"
                            app:autoSizeMinTextSize="2sp"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_dashboard_user_duration_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_user_duration_textview"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|center_horizontal"
                            android:text="3200"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                        <org.envirocar.app.views.utils.SizeSyncTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="@string/dashboard_total_duration"
                            app:autoSizeMaxTextSize="11sp"
                            app:autoSizeMinTextSize="2sp"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/fragment_dashboard_user_statistics_progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSettings"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/cario_color_primary_dark"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_settings_header_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_settings_header_right"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dashboard_recording_settings_header"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="24dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    app:autoSizeMinTextSize="15sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/fragment_dashboard_logged_in_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/cardView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragment_dashboard_banner">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center|bottom"
                    android:layout_weight="4"
                    android:padding="2dp"
                    android:src="@drawable/user_male"
                    android:tint="@color/cario_color_primary_dark" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragment_dashboard_username"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Username"
                    android:textColor="@color/white_cario"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_dashboard_indicator_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintHeight_percent="0.13"
                app:layout_constraintHeight_max="70dp"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_mode_selector">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragment_dashboard_indicator_bluetooth_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_dashboard_indicator_bluetooth"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_dashboard_circle"
                        android:backgroundTint="@color/dashboard_indicator_selector"
                        android:src="@drawable/ic_bluetooth_black_24dp"
                        android:tint="@color/white_cario"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintDimensionRatio="H, 1:1" />

                    <org.envirocar.app.views.utils.SizeSyncTextView
                        android:id="@+id/fragment_dashboard_indicator_bluetooth_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:text="Bluetooth"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="15sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_indicator_bluetooth"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragment_dashboard_indicator_obd_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_dashboard_indicator_obd"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_dashboard_circle"
                        android:backgroundTint="@color/dashboard_indicator_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_obd"
                        android:tint="@color/white_cario"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintDimensionRatio="H, 1:1"/>

                    <org.envirocar.app.views.utils.SizeSyncTextView
                        android:id="@+id/fragment_dashboard_indicator_obd_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:text="OBD"
                        app:autoSizeMinTextSize="7sp"
                        app:autoSizeMaxTextSize="15sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_indicator_obd"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_dashboard_indicator_gps"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_dashboard_circle"
                        android:backgroundTint="@color/dashboard_indicator_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_gps"
                        android:tint="@color/white_cario"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintDimensionRatio="H, 1:1"/>

                    <org.envirocar.app.views.utils.SizeSyncTextView
                        android:id="@+id/fragment_dashboard_indicator_gps_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:text="GPS"
                        app:autoSizeMinTextSize="7sp"
                        app:autoSizeMaxTextSize="15sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_indicator_gps"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_dashboard_indicator_car"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_dashboard_circle"
                        android:backgroundTint="@color/dashboard_indicator_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_drive_eta_black_24dp"
                        android:tint="@color/white_cario"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintDimensionRatio="H, 1:1" />

                    <org.envirocar.app.views.utils.SizeSyncTextView
                        android:id="@+id/fragment_dashboard_indicator_car_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:text="@string/car"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="15sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_indicator_car"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_dashboard_obdselection_layout"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_dashboard_indicator_view"
                app:layout_constraintWidth_percent=".85">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/cario_color_primary_dark"
                        android:padding="8dp"
                        android:src="@drawable/ic_bluetooth_searching_black_24dp"
                        android:tint="@color/white_cario" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_obdselection_text_primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:singleLine="true"
                            android:text="@string/dashboard_obd_not_selected"
                            android:textColor="#000000"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_obdselection_text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:singleLine="true"
                            android:text="@string/dashboard_obd_not_selected_advise"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="15sp"
                            app:autoSizeMinTextSize="7sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_action_arrow_foward"
                        android:tint="@color/cario_color_primary_dark" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_dashboard_carselection_layout"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_dashboard_obdselection_layout"
                app:layout_constraintWidth_percent=".85">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/cario_color_primary_dark"
                        android:padding="8dp"
                        android:src="@drawable/ic_drive_eta_black_24dp"
                        android:tint="@color/white_cario" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_carselection_text_primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:singleLine="true"
                            android:text="@string/dashboard_carselection_no_car_selected"
                            android:textColor="#000000"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_dashboard_carselection_text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:singleLine="true"
                            android:text="@string/dashboard_carselection_no_car_selected_advise"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="15sp"
                            app:autoSizeMinTextSize="7sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_action_arrow_foward"
                        android:tint="@color/cario_color_primary_dark" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragment_dashboard_mode_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSettings"
                segmentedgroup:sc_border_width="2dp"
                segmentedgroup:sc_corner_radius="10dp"
                segmentedgroup:sc_tint_color="@color/cario_color_primary_dark">

                <RadioButton
                    android:id="@+id/fragment_dashboard_obd_mode_button"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
